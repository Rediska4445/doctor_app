<Window x:Class="Doctor.DiseasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Болезни" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Name="DiseasesDataGrid" Grid.Row="0" AutoGenerateColumns="True"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <Button Width="75" Margin="5,0" Content="Отмена" Click="Cancel_Click"/>
            <Button Width="75" Margin="5,0" Content="Ок" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>

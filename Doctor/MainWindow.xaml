<Window x:Class="Doctor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <!-- Левый список функций -->
        <ListBox Grid.Column="0" Name="FunctionsList" Margin="5" SelectionChanged="FunctionsList_SelectionChanged">
            <ListBoxItem>Болезни</ListBoxItem>
            <ListBoxItem>Лекарства</ListBoxItem>
            <ListBoxItem>Рецепт</ListBoxItem>
        </ListBox>

        <!-- Правая область контента -->
        <ContentControl Grid.Column="1" Name="FunctionContent" Margin="5"/>
    </Grid>
</Window>

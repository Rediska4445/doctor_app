<Window x:Class="Doctor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        FontFamily="Segoe UI" FontSize="14"
        Height="500" Width="800" MinWidth="600" MinHeight="400">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Верх: список, консоль, контент -->
            <RowDefinition Height="Auto"/>
            <!-- Низ: кнопки -->
        </Grid.RowDefinitions>

        <!-- Левая панель: список и консоль -->
        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Список -->
                <RowDefinition Height="Auto"/>
                <!-- Консоль -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка Выйти -->
            </Grid.RowDefinitions>

            <!-- Список функций -->
            <ListBox Grid.Row="0" Name="FunctionsList" SelectionChanged="FunctionsList_SelectionChanged" KeyboardNavigation.TabIndex="1" Margin="0">
                <ListBoxItem>Болезни</ListBoxItem>
                <ListBoxItem>Лекарства</ListBoxItem>
                <ListBoxItem>Рецепт</ListBoxItem>
            </ListBox>

            <!-- Консоль -->
            <TextBox Grid.Row="1" Name="ConsoleTextBox" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
             TextWrapping="Wrap" IsReadOnly="True" FontFamily="Consolas" FontSize="12" Margin="0" Height="70"/>
        </Grid>


        <!-- Разделитель -->
        <GridSplitter Grid.Column="1" Grid.Row="0" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent"
                      ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" ShowsPreview="True"/>

        <!-- Основной контент -->
        <ContentControl Grid.Column="2" Grid.Row="0" Name="FunctionContent" Margin="5,0,0,10"/>

        <!-- Нижняя строка: кнопки -->
        <Grid Grid.ColumnSpan="3" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActualWidth, ElementName=FunctionsList}"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка Выйти слева -->
            <Button Grid.Column="0" Content="Выйти" Height="30" Click="LogoutButton_Click" HorizontalAlignment="Stretch"/>

            <!-- Пустой отступ -->
            <!-- пустой столбец для отступа -->

            <!-- Кнопка Сохранить справа на всю ширину -->
            <Button Grid.Column="2" Content="Сохранить" Height="30" HorizontalAlignment="Stretch" Click="SaveButton_Click"/>
        </Grid>

    </Grid>
</Window>

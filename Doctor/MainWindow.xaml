<Window x:Class="Doctor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Левый список функций -->
        <ListBox Grid.Column="0" Grid.Row="0" Name="FunctionsList" Margin="5" SelectionChanged="FunctionsList_SelectionChanged">
            <ListBoxItem>Болезни</ListBoxItem>
            <ListBoxItem>Лекарства</ListBoxItem>
            <ListBoxItem>Рецепт</ListBoxItem>
        </ListBox>

        <!-- Кнопка выйти в нижнем левом углу -->
        <Button Grid.Column="0" Grid.Row="1" Content="Выйти" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="80" Height="30" Click="LogoutButton_Click"/>

        <ContentControl Grid.Column="1" Grid.RowSpan="2" Name="FunctionContent" Margin="5"/>
    </Grid>
</Window>

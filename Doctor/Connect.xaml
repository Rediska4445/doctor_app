<Window x:Class="Doctor.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подключиться" Height="450" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="289*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.RowSpan="2">
            <!-- Login Tab -->
            <TabItem Header="Войти">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox x:Name="LoginName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" />

                    <TextBlock Text="Пароль:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <PasswordBox x:Name="LoginPassword" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" />

                    <TextBlock x:Name="LoginMessage" Foreground="Red" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,10"/>

                    <Grid Grid.Row="3" Grid.ColumnSpan="2">
                        <Button Content="Войти" Height="20" VerticalAlignment="Bottom" Click="Button_Click_1" />
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Register Tab -->
            <TabItem Header="Создать учётную запись">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Имя:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox x:Name="RegName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" />

                    <TextBlock Text="Пароль:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <PasswordBox x:Name="RegPassword" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" />

                    <TextBlock x:Name="RegisterMessage" Foreground="Red" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,10"/>

                    <Grid Grid.Row="3" Grid.ColumnSpan="2">
                        <Button Content="Создать учётную запись" Click="Button_Click" Height="20" VerticalAlignment="Bottom" />
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

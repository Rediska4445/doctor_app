<Window x:Class="Doctor.MedicinesWindow"
        Title="Лекарства" Height="400" Width="600" WindowStartupLocation="CenterOwner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="MedicinesDataGrid" Grid.Row="0" AutoGenerateColumns="True" SelectionMode="Single"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" >
            <Button Width="75" Margin="5,0" Content="Отмена" Click="Cancel_Click"/>
            <Button Width="75" Margin="5,0" Content="Ок" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
